@model IEnumerable<Payment>
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="wrapper">
    <div class="sidebar"
         data-color="purple"
         data-background-color="black"
         data-image="../assets/img/sidebar-2.jpg">
        <div class="logo">
            <a class="simple-text logo-normal"> Admin Panel </a>
        </div>
        <div class="sidebar-wrapper">
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Admin">
                        <i class="material-icons">dashboard</i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="User">
                        <i class="material-icons">person</i>
                        <p>Users List</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Employee">
                        <i class="material-icons">content_paste</i>
                        <p>Employees List</p>
                    </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="Sales" asp-controller="Admin">
                        <i class="material-icons">content_paste</i>
                        <p>Purchases List</p>
                    </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" asp-action="Testimonials" asp-controller="Admin">
                        <i class="material-icons">content_paste</i>
                        <p>Testimonial List</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Home" asp-controller="Home" asp-area="Customer">
                        <i class="material-icons">logout</i>
                        <p>Logout</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-panel">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <h2 class="card-title">Purchases List</h2>
                                <form asp-action="Sales" method="post">
                                    From <input type="date" class="btn" name="fromDate" style="background-color: #1a2035; color:white" />
                                    To   <input type="date" class="btn" name="toDate" style="background-color: #1a2035; color:white" />
                                    <input type="submit" value="Search" asp-action="Sales" class="btn" style="background-color: #1a2035;color:white;right: 10px;position: absolute;" />
                                </form>
                            </div>

                            <div class="card-body">
                                <div class="table-responsive">
                                    @if (Model.Count() == 0)
                                    {
                                        <p class="text-danger">No Purchases ... </p>
                                    }
                                    else
                                    {
                                        <table class="table">
                                            <thead class="text-primary">
                                            <th>
                                                @Html.DisplayNameFor(model => model.PaymentType)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Amount)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.PaymentDate)
                                            </th>
                                            <th>
                                                Customer Name
                                            </th>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.PaymentType)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Amount)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.PaymentDate)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.User.UsarName)
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

