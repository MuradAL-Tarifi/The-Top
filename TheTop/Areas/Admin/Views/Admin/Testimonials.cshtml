@model TheTop.Models.ViewModel.AdminViewModel
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="wrapper">
    <div class="sidebar"
         data-color="purple"
         data-background-color="black"
         data-image="../assets/img/sidebar-2.jpg">
        <div class="logo">
            <a class="simple-text logo-normal"> Admin Panel </a>
        </div>
        <div class="sidebar-wrapper">
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Admin">
                        <i class="material-icons">dashboard</i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="User">
                        <i class="material-icons">person</i>
                        <p>Users List</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Employee">
                        <i class="material-icons">content_paste</i>
                        <p>Employees List</p>
                    </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" asp-action="Sales" asp-controller="Admin">
                        <i class="material-icons">content_paste</i>
                        <p>Purchases List</p>
                    </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="Testimonials" asp-controller="Admin">
                        <i class="material-icons">content_paste</i>
                        <p>Testimonial List</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="Home" asp-controller="Home" asp-area="Customer">
                        <i class="material-icons">logout</i>
                        <p>Logout</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-panel">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <h2 class="card-title">Testimonials List</h2>
                               
                            </div>

                            <div class="card-body">
                                <div class="table-responsive">
                                    @if (Model.Testimonials.Where(m=>m.Approved== false).Count() == 0)
                                    {
                                    <p class="text-danger">There are no Testimonials to accept ... </p>
                                    }
                                    else
                                    {
                                        <table class="table">
                                            <thead class="text-primary">
                                            <th>
                                                @Html.DisplayNameFor(model => model.Testimonials.FirstOrDefault().Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Testimonials.FirstOrDefault().Phone)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Testimonials.FirstOrDefault().Message)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Testimonials.FirstOrDefault().Email)
                                            </th>
                                            <th>
                                            </th>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Testimonials.Where(m => m.Approved == false))
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Phone)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Message)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Email)
                                                        </td>
                                                        <td>
                                                            <a asp-action="Prove" class="btn btn-white btn-link btn-sm" rel="tooltip"
                                                               title="Prove" asp-route-id="@item.Id">
                                                                <i class="material-icons" style="font-size:38px">task</i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

