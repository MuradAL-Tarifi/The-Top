@model IEnumerable<Users>
@{
    ViewData["Title"] = "Employess";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="wrapper">
    <div class="sidebar"
         data-color="purple"
         data-background-color="black"
         data-image="../assets/img/sidebar-2.jpg">
        <!--
            Tip 1: You can change the color of the sidebar using: data-color="purple | azure | green | orange | danger"

            Tip 2: you can also add an image using data-image tag
        -->
        <div class="logo">
            <a class="simple-text logo-normal"> Admin Panel </a>
        </div>
        <div class="sidebar-wrapper">
            <ul class="nav">
                <li class="nav-item ">
                    <a class="nav-link" asp-action="Index" asp-controller="Admin">
                        <i class="material-icons">dashboard</i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="Index" asp-controller="User">
                        <i class="material-icons">person</i>
                        <p>Users List</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Employee">
                        <i class="material-icons">content_paste</i>
                        <p>Employees List</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Sales" asp-controller="Admin">
                        <i class="material-icons">content_paste</i>
                        <p>Purchases List</p>
                    </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" asp-action="Testimonials" asp-controller="Admin">
                        <i class="material-icons">content_paste</i>
                        <p>Testimonial List</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Home" asp-controller="Home" asp-area="Customer">
                        <i class="material-icons">logout</i>
                        <p>Logout</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-panel">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <h2 class="card-title">Users List</h2>
                                <p class="card-category text-right">

                                    <a asp-action="Create" class=" btn btn-success"><i class="fas fa-plus"></i> &nbsp; create</a>
                                </p>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    @if (Model.Count() == 0)
                                    {
                                        <p class="text-danger">No Users ... </p>
                                    }
                                    else
                                    {
                                        <table class="table">
                                            <thead class="text-primary">
                                            <th>@Html.DisplayNameFor(m => m.UsarName)</th>
                                            <th>@Html.DisplayNameFor(m => m.Password)</th>
                                            <th>@Html.DisplayNameFor(m => m.Address)</th>
                                            <th>@Html.DisplayNameFor(m => m.Email)</th>
                                            <th>@Html.DisplayNameFor(m => m.Role)</th>
                                            <th></th>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(m => item.UsarName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(m => item.Password)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(m => item.Address)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(m => item.Email)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(m => item.Role.Role1)
                                                    </td>
                                                    <td>
                                                        <a asp-action="Details" class="btn btn-success text-white" asp-route-id="@item.UserId">
                                                            <i class="fas fa-list-alt"></i>
                                                        </a>
                                                        <a asp-action="Edit" class="btn btn-primary text-white" asp-route-id="@item.UserId">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-action="Delete" class="btn btn-danger text-white" asp-route-id="@item.UserId">
                                                            <i class="far fa-trash-alt"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

